<odoo>
    <record id="view_journal_template_list" model="ir.ui.view">
        <field name="name">specialist.journal.template.list</field>
        <field name="model">specialist.journal.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="text"/>
            </list>
        </field>
    </record>

    <record id="view_journal_template_form" model="ir.ui.view">
        <field name="name">specialist.journal.template.form</field>
        <field name="model">specialist.journal.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
